{
  "manifest_version": 3,
  "name": "Chrome Extension Side panel Boilerplate",
  "version": "1.0",
  "description": "Chrome Extension Side panel Boilerplate with React, React-router and Tailwind CSS",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "sidePanel"
  ],
  "action": {
    "default_title": "Open Side Panel"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}